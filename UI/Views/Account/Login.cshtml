@model DAL.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="images/favicon.ico" type="image/ico" />

    <title>HCR | login patient</title>

    <!-- Font Awesome -->
    <link href="../../vendors/fontawesome-free-6.0.0-web/css/all.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link href="../../vendors/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="../../dist/css/en/main.css" rel="stylesheet" />
    <!-- <link href="../../dist/scss/ar/ar-main.css" rel="stylesheet" /> -->
</head>

<body class="bg-login-patient" style="height: 100vh;">
    <section class="w-75 m-auto">
        <h1 class=" text-center team-light"><i class="fa-solid fa-headset"></i></h1>
        <form asp-action="Login" asp-controller="Account" class="mt-4 mb-2" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row clearfix">
                <!-- Email -->
                <div class="col-sm-12 mb-3 mt-3  ">
                    <div class="form-floating w-50 m-auto">
                        <input type="email" class="form-control" placeholder="mail" asp-for="Email" required />
                        <label for="floatingInput">mail</label>
                        <div>
                            <span asp-validation-for="Email" class="text-danger alert"></span>
                        </div>
                    </div>
                </div>

                <!-- Password -->
                <div class="col-sm-12 mb-3 mt-3 ">
                    <div class="form-floating w-50 m-auto">
                        <input type="password" class="form-control" placeholder="password" asp-for="Password" required />
                        <label for="floatingInput team-light">password</label>
                        <div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                </div>


                <!-- checkbox -->
                <div class="col-sm-12 mb-2 mt-3 ">
                    <div class="mb-2 form-check w-50 m-auto">
                        <input type="checkbox" asp-for="RememberMe" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" asp-for="RememberMe" for="exampleCheck1">Remember Me</label>
                    </div>
                </div>
                <div class="mt-2">
                    <div class="form-group mb-3 pt-2 w-50 m-auto row">
                        <button type="submit" class="btn col">Submit</button>
                        <a  class="text-light mt-3 fs-6">Forget password?</a>
                    </div>
                </div>
            </div>
        </form>
    </section>
    <!-- js -->
    <!-- Bootstrap -->
    <!-- <script src="../../vendors/bootstrap/dist/js/bootstrap.min.js "></script> -->
    <!-- Custom Theme Scripts -->
    <!-- <script src="../../dist/js/custom.js "></script> -->
    <!-- Validation Plugin Js -->
    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>

